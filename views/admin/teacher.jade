extends ../layouts/layout_main
block content
  .container.container-fluid
    form.form-horizontal#credentialsForm(role='form' action='/admin/create/teacher' method='POST')
      .row
        .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-12.col-xs-12
          .checkout.margin-bottom-10
            .row.header.margin-bottom-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12(style='background-color:#F5F5F5;')
                h4 Добавить преподавателя
            .row.margin-bottom-10.margin-sides-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                .form-group
                  label.col-sm-3.control-label(for='email') Электронная почта
                  .col-sm-8
                    input#email.form-control(type='email', placeholder='Email' name='email', autocomplete='off' value='' required)
                .form-group
                  label.col-sm-3.control-label(for='first_name') Имя
                  .col-sm-8
                    input#first_name.form-control(type='text', placeholder='First Name', name='first_name' value='' required)
                .form-group
                  label.col-sm-3.control-label(for='last_name') Фамилия
                  .col-sm-8
                    input#last_name.form-control(type='text', placeholder='Last Name', name='last_name' value='' required)
                .form-group
                  label.col-sm-3.control-label(for='discipline') Дисциплина
                  .col-sm-8
                    select#discipline.form-control(type='text', placeholder='Дисциплина', name='discipline' value='' required)
                      - disciplines.forEach(function(disc) {
                        option
                          | #{disc.name}
                      - })

                button.btn.btn-primary(type='submit') Добавить
    div
        | Список учителей
      table.table.table-stripped
        tr
          td Имя Фамилия
          td Email
          td Удалить

          

        - teachers.forEach(function(teacher) {
          tr
            td 
              a(href='/teacher/#{teacher.id}')
                | #{teacher.first_name + " " + teacher.last_name}
            td
              | #{teacher.email} 
            td
              a(type='button' href='/admin/delete/teacher/' + '#{teacher.id}').btn.btn-danger.btn-xs Х
        - })