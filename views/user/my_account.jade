extends ../layouts/layout_main
block content
  .container.container-fluid
    form.form-horizontal#credentialsForm(role='form' action='/api/v1/user/my_account' method='POST')
      .row
        .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-12.col-xs-12
          .checkout.margin-bottom-10
            .row.header.margin-bottom-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12(style='background-color:#F5F5F5;')
                h4 My Account
            .row.margin-bottom-10.margin-sides-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                .form-group
                  label.col-sm-3.control-label(for='email') Email Address
                  .col-sm-8
                    input#email.form-control(type='email', placeholder='Email' name='email', autocomplete='off' value='#{user.email}' required)
                .form-group
                  label.col-sm-3.control-label(for='first_name') First Name
                  .col-sm-8
                    input#first_name.form-control(type='text', placeholder='First Name', name='first_name' value='#{user.first_name}' required)
                .form-group
                  label.col-sm-3.control-label(for='last_name') Last Name
                  .col-sm-8
                    input#last_name.form-control(type='text', placeholder='Last Name', name='last_name' value='#{user.last_name}' required)

            .row.header.margin-bottom-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12(style='background-color:#F5F5F5;')
                h4 My Shipping
            .row.margin-bottom-10.margin-sides-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                - for (var i = 0; i < user.shipping_addresses.length; i++) {
                .form-group
                  label.col-sm-3.control-label(for='address[shipping][#{i}]') Address #{i+1}
                  .col-sm-8
                    input#address1.form-control(type='text', placeholder='Address', name='address[shipping][#{i}]' value='#{user.shipping_addresses[i].first_address}' required)
                - };

            .row.header.margin-bottom-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12(style='background-color:#F5F5F5;')
                h4 My Billing
            .row.margin-bottom-10.margin-sides-10
              .col-lg-12.col-md-12.col-sm-12.col-xs-12
                - for (var i = 0; i < user.billing_addresses.length; i++) {
                .form-group
                  label.col-sm-3.control-label(for='address[billing][#{i}]') Address #{i+1}
                  .col-sm-8
                    input#address1.form-control(type='text', placeholder='Address', name='address[billing][#{i}]' value='#{user.billing_addresses[i].first_address}' required)
                - };

            .row.margin-bottom-10.margin-sides-10
              //- a(href='/checkout_shipping')
              button.btn.btn-primary(type='submit' form='credentialsForm') Save changes
            
